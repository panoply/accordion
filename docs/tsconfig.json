{
  "exclude": [
    "node_modules/**",
    "test"
  ],
  "include": [
    "src/app/**/*.ts",
  ],
  "typeAcquisition": {
    "enable": true
  },
  "compilerOptions": {
    "incremental": true,
    "declaration": true,
    "target": "ES6",
    "moduleResolution": "Node",
    "lib": [
      "es2020",
      "dom",
      "dom.iterable"
    ],
    "module": "ES6",
    "removeComments": true,
    "pretty": true
  }
}