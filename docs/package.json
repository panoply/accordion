{
  "name": "relapse-docs",
  "private": true,
  "description": "Documentation and example for Relapse",
  "version": "0.2.0",
  "homepage": "https://github.com/panoply/accordion",
  "author": {
    "name": "Νίκος Σαβίδης",
    "email": "n.savvidis@gmx.com",
    "url": "https://brixtoltextiles.com"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/panoply/relapse.git"
  },
  "bugs": {
    "url": "https://github.com/panoply/relapse/issues"
  },
  "license": "MIT",
  "keywords": [
    "accordion",
    "component",
    "collapse",
    "toggle"
  ],
  "scripts": {
    "dev": "pnpm run scss:build && concurrently \"pnpm run tsup:watch\" \"pnpm run scss:watch\" \"pnpm run 11ty:watch\"",
    "build": "rm -rf public && pnpm run tsup:build && pnpm run scss:build && pnpm run 11ty:build",
    "11ty:watch": "eleventy --serve --watch",
    "11ty:build": "ENV=production eleventy",
    "tsup:build": "tsup --minify --env.NODE_ENV production",
    "tsup:watch": "tsup --watch",
    "scss:build": "sass --load-path=node_modules ./src/sass/stylesheet.scss public/style.css --no-source-map",
    "scss:watch": "sass --watch ./src/sass/stylesheet.scss public/style.css --no-source-map --poll"
  },
  "browserslist": [
    "defaults",
    "Chrome >= 78",
    "Firefox >= 78",
    "Safari >= 10",
    "Edge >= 18",
    "IE >= 11",
    "Opera >= 73",
    "ChromeAndroid >= 75",
    "ios_saf >= 9",
    "Android >= 4",
    "not dead"
  ],
  "stylelint": {
    "extends": "@liquify/stylelint-config",
    "ignoreFiles": [
      "**/node_modules"
    ]
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@brixtol/bootstrap": "^1.7.1",
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@liquify/prettier-config": "^1.2.1",
    "@liquify/stylelint-config": "^1.0.0",
    "@panoply/11ty": "^0.2.0",
    "@sardine/eleventy-plugin-tinyhtml": "^0.2.0",
    "@types/adm-zip": "^0.5.5",
    "@types/markdown-it": "^13.0.7",
    "adm-zip": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cssnano": "^6.0.2",
    "eleventy-plugin-svg-sprite": "^2.4.2",
    "esbuild": "^0.19.10",
    "language-literals": "^0.0.2",
    "markdown-it": "^14.0.0",
    "markdown-it-anchor": "^8.6.7",
    "markdown-it-container": "^4.0.0",
    "papyrus": "link:../../../liquify/packages/papyrus",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "sass": "^1.69.6",
    "tsup": "^8.0.1"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "qvp": "^0.3.2",
    "relapse": "link:..",
    "spx": "link:../../../brixtol/packages/spx"
  }
}