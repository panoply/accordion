{
  "npm.packageManager": "pnpm",
  "stylelint.validate": [
    "scss",
    "sass",
    "less",
    "postcss"
  ],
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/pnpm-lock.yaml": true
  },
  "stylelint.packageManager": "pnpm",
  "stylelint.enable": true,
  "scss.validate": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.stylelint": true
  },
  "[liquid]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "sissel.shopify-liquid"
  },
  "liquid.config.method": "workspace",
  "liquid.format.rules": {
    "wrap": 0,
    "liquid": {
      "forceArgument": 3
    },
    "markup": {
      "forceAttribute": 2,
      "preserveText": true,
      "forceIndent": true
    }
  },
}