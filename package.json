{
  "name": "relapse",
  "description": "An A11y compliant, modern, lightweight (2kb gzip) dependency free utility for collapsible toggle components.",
  "version": "0.6.0",
  "homepage": "https://panoply.github.io/relapse/",
  "author": {
    "name": "Nikolas Savvidis",
    "url": "https://github.com/panoply"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/panoply/relapse.git"
  },
  "bugs": {
    "url": "https://github.com/panoply/relapse/issues"
  },
  "license": "MIT",
  "type": "module",
  "types": "./index.d.ts",
  "module": "./index.js",
  "main": "./index.js",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./index.js",
      "default": "./index.js"
    }
  },
  "files": [
    "index.js",
    "index.d.ts"
  ],
  "keywords": [
    "accordion",
    "dropdown",
    "expand",
    "collapse",
    "toggle",
    "a11y",
    "component"
  ],
  "prettier": "@sissel/prettier-config",
  "eslintConfig": {
    "ignorePatterns": [
      "package",
      "types",
      "index.js",
      "iife.js",
      "docs/public"
    ],
    "extends": "@sissel/eslint-config",
    "rules": {
      "multiline-ternary": "off"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup --minify",
    "gzs": "gzip-size index.js --include-original"
  },
  "browserslist": [
    "defaults",
    "Chrome >= 78",
    "Firefox >= 78",
    "Safari >= 10",
    "Edge >= 18",
    "IE >= 11",
    "Opera >= 73",
    "ChromeAndroid >= 75",
    "ios_saf >= 9",
    "Android >= 4",
    "not dead"
  ],
  "devDependencies": {
    "@sissel/eslint-config": "^1.1.0",
    "@sissel/prettier-config": "^1.1.0",
    "browserslist": "^4.21.4",
    "eslint": "^8.26.0",
    "gzip-size-cli": "^5.1.0",
    "prettier": "^2.7.1",
    "terser": "^5.24.0",
    "tsup": "^7.2.0",
    "typescript": "^4.8.4"
  },
  "optionalDependencies": {
    "postcss": "^8.4.18"
  }
}