{
  "name": "@panoply/accordion",
  "description": "Simple a11y accordion inspired from Handorgel",
  "version": "0.2.0",
  "homepage": "https://github.com/panoply/accordion",
  "author": {
    "name": "Nikolas Savvidis",
    "url": "https://github.com/panoply"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/panoply/accordion.git"
  },
  "bugs": {
    "url": "https://github.com/panoply/accordion/issues"
  },
  "license": "ISC",
  "type": "module",
  "types": "./index.d.ts",
  "module": "./index.min.js",
  "exports": {
    ".": {
      "import": "./index.min.js"
    }
  },
  "files": [
    "./index.d.ts",
    "./index.min.js",
    "./index.scss",
    "./index.css"
  ],
  "keywords": [
    "accordion",
    "component",
    "collapse",
    "toggle",
    "a11y",
    "dropdown"
  ],
  "prettier": "@sissel/prettier-config",
  "eslintConfig": {
    "ignorePatterns": [
      "package",
      "types",
      "index.js"
    ],
    "extends": "@sissel/eslint-config",
    "rules": {
      "multiline-ternary": "off"
    }
  },
  "scripts": {
    "dev": "esbuild src/index.ts --outfile=index.js --format=esm --bundle --watch",
    "build": "esbuild src/index.ts --outfile=index.js --format=esm --bundle --mangle-props=^[$] --minify",
    "gzs": "gzip-size index.js --include-original"
  },
  "browserslist": [
    "defaults",
    "Chrome >= 78",
    "Firefox >= 78",
    "Safari >= 10",
    "Edge >= 18",
    "IE >= 11",
    "Opera >= 73",
    "ChromeAndroid >= 75",
    "ios_saf >= 9",
    "Android >= 4",
    "not dead"
  ],
  "devDependencies": {
    "@sissel/eslint-config": "^1.1.0",
    "@sissel/prettier-config": "^1.1.0",
    "browserslist": "^4.20.3",
    "esbuild": "^0.14.38",
    "eslint": "^8.14.0",
    "gzip-size-cli": "^5.1.0",
    "prettier": "^2.6.2",
    "typescript": "^4.6.4"
  },
  "optionalDependencies": {
    "postcss": "^8.4.13"
  }
}
