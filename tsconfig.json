{
  "exclude": [
    "node_modules/**",
    "test",
  ],
  "include": [
    "src/index.ts",
    "index.d.ts"
  ],
  "typeAcquisition": {
    "enable": true,
  },
  "compilerOptions": {
    "incremental": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
    "target": "ES6",
    "lib": [
      "es2020",
      "dom",
      "dom.iterable"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "emitDeclarationOnly": true,
    "isolatedModules": true,
  }
}