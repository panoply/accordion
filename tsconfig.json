{
  "exclude": [
    "node_modules/**",
    "test"
  ],
  "include": [
    "src/index.ts",
    "index.d.ts",
    "tsup.config.ts"
  ],
  "typeAcquisition": {
    "enable": true,
  },
  "compilerOptions": {
    "incremental": true,
    "declaration": true,
    "target": "ES6",
    "removeComments": true,
    "resolveJsonModule": true,
    "lib": [
      "es2020",
      "dom",
      "dom.iterable",
      "ESNext"
    ],
    "moduleResolution": "Node",
    "module": "ES6"
  }
}