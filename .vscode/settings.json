{
  "npm.packageManager": "pnpm",
  "stylelint.validate": [
    "scss",
    "sass",
    "less",
    "postcss"
  ],
  "stylelint.packageManager": "pnpm",
  "stylelint.enable": true,
  "scss.validate": false, // important to disable vscode validation
  "editor.codeActionsOnSave": {
    "source.fixAll.stylelint": "explicit"
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/node_modules": true,
    "**/pnpm-lock.yaml": true
  },
  "[liquid]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "sissel.shopify-liquid"
  },
  "liquid.config.method": "workspace",
  "liquid.format.rules": {
    "wrap": 0,
    "liquid": {
      "forceArgument": 3,
      "delimiterTrims": "preserve",
      "indentAttribute": true
    },
    "markup": {
      "forceAttribute": 2,
      "preserveText": true,
      "forceIndent": true
    }
  },
  "highlight.regexes": {
    "(:{3,4})": {
      "regexFlags": "g",
      "decorations": [
        {
          "color": "#E91E63"
        }
      ]
    },
    "(?<=:{3,4}\\s)(grid|example|tabs|css|scss|html|note)": {
      "decorations": [
        {
          "color": "#81D4FA",
          "fontWeight": "900"
        }
      ]
    },
    "(?<=:{3,4}[a-z ]+)([colsxmd0-9-]+)": {
      "regexFlags": "g",
      "decorations": [
        {
          "color": "#91EBC2",
          "isWholeLine": true
        }
      ]
    },
    "(relapse.*?)(?=[=])": {
      "filterFileRegex": ".*\\.liquid",
      "decorations": [
        {
          "color": "#c095ff",
        },
      ]
    },
    "(?<=\\.)(\\$[a-zA-Z]+)": {
      "decorations": [
        {
          "color": "#c5c5c5"
        }
      ]
    },
    "(spx)(@)([a-z]+)[='\"]{2}.*([.])": {
      "decorations": [
        {
          "color": "#81D4FA",
        },
        {
          "color": "#E91E63",
        },
        {
          "color": "#9EE34F"
        }
      ]
    },
    "(spx)(@)(window)(\\:)([a-z]+)(?=\\=)": {
      "decorations": [
        {
          "color": "#81D4FA",
        },
        {
          "color": "#E91E63",
        },
        {
          "color": "#81D4FA",
        },
        {
          "color": "#E91E63",
        },
        {
          "color": "#9EE34F"
        }
      ]
    },
    "(spx-[a-z]+)": {
      "filterFileRegex": ".*\\.liquid",
      "decorations": [
        {
          "color": "#81D4FA",
        }
      ]
    },
    "(?<=spx-[a-z]+:[a-z-]+\\=\")(window)(\\.)": {
      "decorations": [
        {
          "color": "#81D4FA",
        },
        {
          "color": "#E91E63",
        },
      ]
    },
    "(?<=spx-.*?\\=\")([$a-zA-Z0-9_-]+)(\\.)": {
      "decorations": [
        {
          "color": "#FFAB40",
        },
        {
          "color": "#E91E63",
        },
      ]
    },
    "(?<=spx-[a-z]+:[a-z-]+\\=\")(\\d+)": {
      "decorations": [
        {
          "color": "#A96EE4",
        }
      ]
    },
    "(?<=spx-[a-z]+:[a-z-]+\\=\")(false|true)": {
      "decorations": [
        {
          "color": "#F48FB1"
        }
      ]
    },
    "(spx-[a-z]+)(:)([a-z-]+)(?=[=])": {
      "decorations": [
        {
          "color": "#81D4FA",
        },
        {
          "color": "#E91E63",
        },
        {
          "color": "#FFFFFF",
        }
      ]
    },
  },
  "cSpell.words": [
    "bezier",
    "Flems",
    "reinit",
    "WAAPI"
  ]
}