{
  "npm.packageManager": "pnpm",
  "stylelint.validate": [
    "scss",
    "sass"
  ],
  "stylelint.packageManager": "pnpm",
  "stylelint.enable": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/node_modules": true,
    "**/pnpm-lock.yaml": true
  },
  "scss.validate": false,
  "[liquid]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "sissel.shopify-liquid"
  },
  "liquid.config.method": "workspace",
  "liquid.format.rules": {
    "wrap": 0,
    "liquid": {
      "forceArgument": 3,
      "delimiterTrims": "always"
    },
    "markup": {
      "forceAttribute": 2,
      "preserveText": true,
      "forceIndent": true
    }
  },
  "highlight.regexes": {
    "(:{3,4})": {
      "regexFlags": "g",
      "decorations": [
        {
          "color": "#E91E63"
        }
      ]
    },
    "(?<=:{3,4}\\s)(grid|example|tabs|css|scss|html|note)": {
      "decorations": [
        {
          "color": "#81D4FA",
          "fontWeight": "900"
        }
      ]
    },
    "(?<=:{3,4}[a-z ]+)([colsxmd0-9-]+)": {
      "regexFlags": "g",
      "decorations": [
        {
          "color": "#91EBC2",
          "isWholeLine": true
        }
      ]
    },
    "(relapse.*?)(?=[=])": {
      "filterFileRegex": ".*\\.liquid",
      "decorations": [
        {
          "color": "#c095ff",
        },
      ]
    },
    "(spx-[a-z]+)": {
      "filterFileRegex": ".*\\.liquid",
      "decorations": [
        {
          "color": "#87b0fc",
        },
      ]
    },
    "(spx-data)(:)([a-z]+)": {
      "decorations": [
        {
          "color": "#87b0fc",
        },
        {
          "color": "#888888",
        },
        {
          "color": "#FFFFFF"
        }
      ]
    }
  },
  "cSpell.words": [
    "bezier",
    "WAAPI"
  ]
}